CREATE TABLE "cliente" (
"idcliente" SERIAL NOT NULL ,
"cli_nombre" TEXT NOT NULL ,
"cli_razonsocial" TEXT NOT NULL ,
"cli_cedula" TEXT NOT NULL ,
"cli_ruc" TEXT NOT NULL ,
"cli_direccion" TEXT NOT NULL ,
"cli_telefono" TEXT NOT NULL ,
"cli_ultimaventa" DATE NOT NULL ,
"fk_idnacionalidad" INT NOT NULL ,
"fk_idciudad" INT NOT NULL ,
PRIMARY KEY("idcliente")
);
CREATE TABLE "nacionalidad" (
"idnacionalidad" SERIAL NOT NULL ,
"nac_nombre" TEXT NOT NULL ,
PRIMARY KEY("idnacionalidad")
);
CREATE TABLE "ciudad" (
"idciudad" SERIAL NOT NULL ,
"ciu_nombre" TEXT NOT NULL ,
PRIMARY KEY("idciudad")
);
