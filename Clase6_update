    /**
     * FUNCION QUE SE ENCARGA DE CONSTRUIR EL SQL UPDATE PARA ACTUALIZAR O MODIFICAR LOS DATOS
     * SIEMPRE MODIFICA TENIENDO EN CUENTA LA ID DE LA TABLA
     * @param conn CONEXION 
     * @param columna COLUMNA CON LOS NOMBRE DE LOS CAMPOS DE LA TABLA
     * @param campo COMPOS SON LOS DATOS QUE SE VA MODIFICAR
     * @param mensaje SI TRUE MUESTRA EL MENSAJE O  FALSE NO
     */
    public void updateSQL_vector(Connection conn, String columna[], String campo[], boolean mensaje) {
        String impcolumncampo = "";//VARIABLE DONDE SE CONSTRUYE 
        if (columna.length == campo.length + 1) {//PRIMERO SE CONPARA SI LA COLUMNA Y CAMPO SON DE CANTIDAD CORRECTA
            for (int c = 2; c < columna.length; c++) {//RECORREMOS LA COLUMNA DE ACUERDO DE SU TAMANO SE INICIA EL RECORRIDO EN LA POSICION 2 POR QUE EL 0 ES LA TABLA Y 1 ES EL ID
                if (c == (columna.length - 1)) {//ESTA SENTENCIA SE EJECUTA AL FINAL DEL VECTOR POR ULTIMO
                    //SE CARGA AL FINAL DEL VECTOR
                    impcolumncampo = impcolumncampo + (columna[c] + "='" + (campo[c - 1] + "'"));
                } else {
                    //SE CARGA DESDE LA SEGUNDA POSICION HASTA EL ANTE ULTIMO
                    impcolumncampo = impcolumncampo + (columna[c] + "='" + (campo[c - 1] + "',"));
                }
            }
            //UNA VES CONSTRUIDO SE CREA EL SQL 
            //columna[0] siempre va ser el nombre de la tabla
            //impcolumncampo va la columna seguido del valor a modificar eje nombre='JUAN'
            //columna[1] este siempre tiene que ser el nombre del campo id
            //campo[0] este siempre es valor del id
            String sql_update = "UPDATE " + columna[0] + " SET " + impcolumncampo + " WHERE " + columna[1] + "=" + campo[0] + "";
            String msj_update = "REGISTRO " + columna[0] + " MODIFICADO CORRECTAMENTE";
            SQL_executeUpdate(conn, sql_update, msj_update, mensaje);//envia a la base de dato
        } else {
            //error en caso que columna y campo no tiene la cantidad adecuada
            JOptionPane.showMessageDialog(null, "LAS COLUMNAS Y LOS CAMPOS NO TIENE LA CANTIDAD CORRECTA");
        }
    }
    //#####################################################################################
        /**
     * SENTENCIA SQL QUE SE ENCARGA DE ACTUALIZAR O MODIFICAR LA TABLA 
     * HACIENDO UN UPDATE
     * @param conn CONEXION
     * @param sql SENTENCIA SQL DE UPDATE
     * @param consulta MENSAJE QUE VA MOSTRAR SE ESTA CORRECTO
     * @param mensaje SI ES TRUE MUESTRA EL MENSAJE O FALSE NO MUESTRA
     */
    public void SQL_executeUpdate(Connection conn,String sql,String consulta,boolean mensaje){
        try {
            PreparedStatement pst=conn.prepareStatement(sql);
            pst.executeUpdate();
            if(mensaje){
                JOptionPane.showMessageDialog(null,consulta);
            }
            System.out.println("EXECUTEUPDATE:..........................##\n"+sql);
        } catch (Exception e) {
            fm.mensaje_error_sql(e, sql, "SQL_executeUpdate");
        }
    }
    
    //#################################################################################
        /**
     * MENSAJE DE CONFIRMACION CON SIMBOLO DE WARNING
     * @param mensaje EL MENSAJE QUE SE QUIERE MOSTRAR
     * @param titulo EL TITULO DEL MENSAJE
     * @param btn1 SI SE PRECIONE RETORNA TRUE O VERDADERO
     * @param btn2 SI SE PRECIONA RETORNA FALSE O FALSO
     * @return RETORNA TRUE O FALSE
     */
    public boolean getBoo_mensajeConfirmacion_warning(String mensaje,String titulo,String btn1,String btn2){
        JOptionPane jOptionPane=new JOptionPane();
        Object [] opciones={btn1,btn2};
        boolean mensajeOK;
        int eleccion=jOptionPane.showOptionDialog(null,mensaje,titulo,
                jOptionPane.YES_NO_OPTION,
                jOptionPane.WARNING_MESSAGE,null,opciones,btn1);
        if(eleccion == jOptionPane.YES_OPTION){
            mensajeOK=true;//SI SE PRECIONA EL PRIMER BOTON BTN1
        }else{
            mensajeOK=false;//SI SE PRECIONA EL SEGUNDO BOTON BTN2
        }
        return mensajeOK;
    }
